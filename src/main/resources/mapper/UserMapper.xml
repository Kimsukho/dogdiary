<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.dao.UserDao">

    <resultMap id="userResultMap" type="com.project.model.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
    </resultMap>

    <!-- username으로 사용자 조회 -->
    <select id="findUserByUsername" parameterType="string" resultMap="userResultMap">
        SELECT 
            id,
            username,
            password,
            email,
            role
        FROM users
        WHERE username = #{username}
    </select>

    <!-- getUserByName: findUserByUsername과 동일한 쿼리 -->
    <select id="getUserByName" parameterType="string" resultMap="userResultMap">
        SELECT 
            id,
            username,
            password,
            email,
            role
        FROM users
        WHERE username = #{username}
    </select>

    <!-- 사용자 등록 -->
    <insert id="register" parameterType="java.util.HashMap">
        INSERT INTO users (username, password, email, role)
        VALUES (#{username}, #{password}, #{email}, COALESCE(#{role}, 'USER'))
    </insert>

    <!-- 사용자 정보 수정 -->
    <update id="update" parameterType="java.util.HashMap">
        UPDATE users
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 사용자 삭제 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <!-- 모든 사용자 조회 -->
    <select id="getUserList" resultType="java.util.HashMap">
        SELECT 
            id,
            username,
            password,
            email,
            role,
            regdate,
            last_updated
        FROM users
        ORDER BY regdate DESC
    </select>

    <!-- 사용자 정보 조회 (HashMap 반환) -->
    <select id="getUserInfo" parameterType="string" resultType="java.util.HashMap">
        SELECT 
            id,
            username,
            password,
            email,
            role,
            regdate,
            last_updated
        FROM users
        WHERE username = #{username}
    </select>

    <!-- 비밀번호 변경 -->
    <update id="resetPassword" parameterType="java.util.HashMap">
        UPDATE users
        SET password = #{password}
        WHERE username = #{username}
    </update>

</mapper>
